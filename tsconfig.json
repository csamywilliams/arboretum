{
  "compilerOptions": {
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./build/",
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "paths": {
      "components/*": ["components/*"],
      "utils/*": ["utils/*"],
      "data/*": ["data/*"],
      "container/*": ["container/*"]
    }
  },
  "include": ["src/**/*", "./config/setupTests.ts"],
  "exclude": ["node_modules", "**/*.styled.jsx"],
  "watch": true
}
