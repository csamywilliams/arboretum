{
  "compilerOptions": {
    "jsx": "react",
    "allowJs": true,
    "noImplicitAny": true,
    "outDir": "./build/",
    "baseUrl": "./src",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,   
    "paths": {
      "js/*": ["js/*"],
      "components/*": [
        "js/components/*"
      ],
      "hooks/*": [
        "js/hooks/*"
      ],
      "reducers/*": [
        "js/reducers/*"
      ],
      "utils/*": [
        "js/utils/*"
      ],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.styled.jsx"
  ],
  "watch": true
}